{erl_opts, [
    debug_info,
    {i, "_build/default/lib"},
    {i, "./apps"}
]}.

{lfe_opts, [
    {i, "_build/default/lib"},
    {i, "./apps"}
]}.

{deps, [
    {lfe, "2.0.1"},
    {logjam, "1.0.5"}
]}.

{plugins, [
    {rebar3_lfe, "0.3.2"}
]}.

{provider_hooks, [
    {pre, [
        {compile, {lfe, compile}}
    ]}
]}.

{relx, [
    {release, {ports, "0.1.0"}, [
        ports,
        sasl
    ]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
