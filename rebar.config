{erl_opts, [
    debug_info,
    {i, "_build/default/lib"},
    {i, "./apps"}
]}.

{lfe_opts, [
    {i, "_build/default/lib"},
    {i, "./apps"}
]}.

{deps, [
    {lfe, "2.0.1"},
    {logjam, "1.0.5"},
    {erlexec, "2.0.0"}
]}.

{plugins, [
    {rebar3_lfe, "0.4.0"}
]}.

{provider_hooks, [
    {pre, [
        {compile, {lfe, compile}}
    ]}
]}.

{relx, [
    {release, {ports, "0.1.0"}, [
        ports,
        lfe,
        logjam,
        sasl,
        erlexec
    ]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{xref_checks, [
    undefined_function_calls, undefined_functions, locals_not_used,
    deprecated_function_calls, deprecated_functions
]}.

{dialyzer, [
    {warnings, [unknown]}
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.3.0"},
            {ltest, "0.13.1"}
        ]},
        {plugins, [
            {rebar3_proper, "0.12.1"}
        ]},
        {eunit_opts, [verbose]},
        {erl_opts, [
            {src_dirs, ["src", "test"]}
        ]}
    ]}
]}.

{alias, [
    {repl, [
        compile,
        {lfe, repl}
    ]},
    {coverage, [
        {proper, "-c"},
        {cover, "-v --min_coverage=0"}
    ]},
    {test, [{lfe, "ltest -tall"}]},
    {check, [
        compile,
        xref,
        %dialyzer,
        {lfe, "ltest -tall"},
        coverage
    ]}
]}.
